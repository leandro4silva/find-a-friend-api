generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ageAnimal {
  PUPPY
  ADULT
}

enum sizeAnimal {
  LITTLE
  MEDIUM
  BIG
}

enum energyAnimal {
  LOW
  MID
  HIGH
}

enum enviromentAnimal {
  WIDE
  MODERATE
  NARROW
}

model Pet {
  id           String        @id @default(uuid())
  name         String
  about        String?
  age          ageAnimal
  size         sizeAnimal
  energy       energyAnimal
  photos       Photo[]
  requirements Requirement[]

  @@map("pets")
}

model Photo {
  id       String @id @default(uuid())
  filename String
  path     String
  petsId   String
  Pets     Pet    @relation(fields: [petsId], references: [id])

  @@map("photos")
}

model Org {
  id            String  @id @default(uuid())
  name          String
  email         String
  addressId     String
  addresses     Address @relation(fields: [addressId], references: [id])
  whatsapp      String
  password_hash String

  @@map("orgs")
}

model Address {
  id           String @id @default(uuid())
  street       String
  neighborhood String
  complement   String
  locality     String
  city         String
  zipCode      String
  Orgs         Org[]

  @@map("addresses")
}

model Requirement {
  id          String @id @default(uuid())
  description String
  Pets        Pet    @relation(fields: [petsId], references: [id])
  petsId      String

  @@map("requirements")
}
