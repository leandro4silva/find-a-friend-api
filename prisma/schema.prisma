generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ageAnimal {
  PUPPY
  ADULT
}

enum sizeAnimal {
  LITTLE
  MEDIUM
  BIG
}

enum energyAnimal {
  LOW
  MID
  HIGH
}

enum enviromentAnimal {
  WIDE
  MODERATE
  NARROW
}

model Pets {
  id           String         @id @default(uuid())
  name         String
  about        String
  age          ageAnimal
  size         sizeAnimal
  energy       energyAnimal
  photos       Photos[]
  requirements Requirements[]

  @@map("pets")
}

model Photos {
  id     String @id @default(uuid())
  name   String
  path   String
  petsId String
  Pets   Pets   @relation(fields: [petsId], references: [id])

  @@map("photos")
}

model Requirements {
  id          String @id
  description String
  Pets        Pets   @relation(fields: [petsId], references: [id])
  petsId      String

  @@map("requirements")
}
