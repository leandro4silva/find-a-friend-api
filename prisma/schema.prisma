generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ageAnimal {
  PUPPY
  ADULT
}

enum sizeAnimal {
  LITTLE
  MEDIUM
  BIG
}

enum energyAnimal {
  LOW
  MID
  HIGH
}

enum enviromentAnimal {
  WIDE
  MODERATE
  NARROW
}

model Pets {
  id           String         @id @default(uuid())
  name         String
  about        String?
  age          ageAnimal
  size         sizeAnimal
  energy       energyAnimal
  photos       Photos[]
  requirements Requirements[]

  @@map("pets")
}

model Photos {
  id       String @id @default(uuid())
  filename String
  path     String
  petsId   String
  Pets     Pets   @relation(fields: [petsId], references: [id])

  @@map("photos")
}

model Orgs {
  id        String    @id @default(uuid())
  name      String
  addressId String
  addresses Addresses @relation(fields: [addressId], references: [id])
  whatsapp  String
  password  String

  @@map("orgs")
}

model Addresses {
  id           String @id @default(uuid())
  street       String
  neighborhood String
  complement   String
  locality     String
  city         String
  zipCode      String
  Orgs         Orgs[]

  @@map("addresses")
}

model Requirements {
  id          String @id @default(uuid())
  description String
  Pets        Pets   @relation(fields: [petsId], references: [id])
  petsId      String

  @@map("requirements")
}
